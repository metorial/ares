model UserImpersonation {
  oid          BigInt @id
  id           String @unique
  clientSecret String @unique

  isConsumed Boolean @default(false)

  reason String

  adminOid BigInt
  admin    Admin  @relation(fields: [adminOid], references: [oid], onDelete: Cascade)

  userOid BigInt
  user    User   @relation(fields: [userOid], references: [oid], onDelete: Cascade)

  createdAt DateTime @default(now())
  expiresAt DateTime

  authDeviceUserSessions AuthDeviceUserSession[]
  authAttempts           AuthAttempt[]
}
